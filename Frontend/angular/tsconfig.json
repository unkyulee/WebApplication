{
  "files": [
		"src/app/app.ts",
		"src/polyfills.ts"
	],
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ],
  "compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "typeRoots": ["node_modules/@types"],
    "downlevelIteration": true,
		"importHelpers": true,
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "module": "es2015",
    "target": "es2020",    
    "lib": ["es2015", "dom"]
	},
	"include": ["src/**/*.d.ts"]
}