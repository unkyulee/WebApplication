[
  {
    "_id": ObjectId("000000000000000000000010"),
    "name": "Default Site",
    "description": "Default Site",
    "url": "/",
    "priority": 1,
    "module": "cms"
  },

  {
    "_id": ObjectId("000000000000000000000021"),
    "name": "Admin Web Services",
    "description": "Provide site administration web services",
    "url": "/adminapi",
    "priority": 3,
    "module": "websvc"
  },

  {
    "_id": ObjectId("000000000000000000000020"),
    "name": "Admin",
    "description": "Provide site administration",
    "url": "/admin",
    "priority": 2,
    "module": "angular",
    "locale": "it",
    "locale_long": "it-IT",
    "navigation": {
      "style": {
        "backgroundColor": "#2C313D"
      },
      "close": {
        "style": {
          "color": "#95989E"
        }
      },
      "header": {
        "screen": [
          {
            "type": "typography",
            "text": "Admin",
            "style": {
              "color": "white",
              "fontSize": "20px",
              "textAlign": "center",
              "padding": "48px 8px 12px"
            }
          }
        ]
      }
    },
    "toolbar": {
      "style": {
        "backgroundColor": "#D32F2F",
        "color": "white",
        "position": "sticky",
        "top": 0,
        "zIndex": 1000,
        "minHeight": "56px",
        "height": "56px"
      },

      "actions": [
        {
          "type": "button",
          "buttonType": "mat-icon-button",
          "label": "Refresh",
          "click": "this.event.send({'name': 'refresh'})",
          "icon": "refresh"
        }
      ]
    },
    "content": {
      "style": {
        "width": "100%",
        "height": "calc(100% - 56px)",
        "minWidth": "100%",
        "padding": "0",
        "background": "#f1f1f1",
        "display": "flex",
        "flexDirection": "column",
        "overflow": "auto"
      }
    },
    "filter": {
      "header": {
        "style": {
          "background": "#2C313D",
          "color": "white",
          "display": "flex",
          "flex-flow": "row wrap"
        }
      },
      "container": {
        "style": {
          "display": "flex",
          "background": "white",
          "padding": "16px 8px 8px 8px",
          "flex-wrap": "wrap",
          "justify-content": "space-around"
        },
        "class": {
          "mat-elevation-z1": true
        }
      }
    },
    "dataTable": {
      "layoutStyle": {
        "width": "100%",
        "display": "flex",
        "flex-direction": "column"
      },
      "class": "material",
      "headerHeight": 40,
      "footerHeight": 50,
      "minColumnWidth": 120
    },
    "paginator": {
      "class": {},
      "style": {
        "position": "sticky",
        "bottom": 0,
        "z-index": 1000
      }
    },
    "formGenerator": {
      "style": {
        "display": "flex",
        "flex-wrap": "wrap",
        "justify-content": "space-between"
      },
      "header": {
        "style": {
          "background": "#3B4251",
          "color": "white",
          "fontWeight": "bold",
          "textTransform": "uppercase",
          "display": "flex",
          "align-items": "center"
        },
        "class": {
          "mat-elevation-z4": true
        }
      },
      "container": {
        "style": {
          "align-items": "stretch",
          "box-sizing": "border-box",
          "place-content": "stretch flex-start",
          "padding": "8px",
          "margin": "0 8px 8px 8px",
          "background": "white",
          "color": "rgba(0,0,0,.87)",
          "flex-direction": "row",
          "flex-wrap": "wrap",
          "justify-content": "space-between"
        },
        "class": {
          "mat-elevation-z4": true
        }
      }
    },
    "calendar": {
      "week": {
        "header": {
          "style": {
            "background": "#3B4251",
            "color": "white"
          },
          "date": "`<b>${moment(data).format('L')}</b><small style='padding: 4px; color: lightgrey'>${moment(data).format('dddd')}</small>`"
        },
        "item": {
          "style": {
            "background": "white",
            "margin": "8px 4px",
            "padding": "8px",
            "cursor": "pointer"
          },
          "class": {
            "mat-elevation-z2": true
          }
        }
      }
    },
    "login": {
      "layoutStyle": {
        "width": "100%",
        "height": "100%",
        "overflow": "auto",
        "background-size": "cover",
        "background-color": "#2d323e",
        "display": "flex",
        "align-items": "center",
        "justify-content": "center"
      },
      "class": {
        "mat-elevation-z16": true
      },
      "style": {
        "width": "300px",
        "min-width": "300px",
        "background": "#ffffff",
        "text-align": "center"
      },

      "screen": [
        {
          "type": "typography",
          "text": "Admin",
          "style": {
            "fontSize": "20px",
            "textAlign": "center",
            "padding": "64px 0 32px"
          }
        },
        {
          "type": "typography",
          "key": "error",
          "style": {
            "color": "crimson",
            "textAlign": "center",
            "padding": "0 0 12px"
          }
        },
        {
          "type": "input",
          "inputType": "email",
          "key": "id",
          "label": "Nome utente",
          "keyupEnter": "this.event.send({name: 'login'})",
          "errorCondition": "!value",
          "errorMessage": "Devi inserire nome utente",
          "style": {
            "padding": "0px 48px 0px 48px"
          }
        },
        {
          "type": "input",
          "inputType": "password",
          "key": "password",
          "label": "Password",
          "keyupEnter": "this.event.send({name: 'login'})",
          "style": {
            "padding": "0px 48px 0px 48px"
          }
        },
        {
          "type": "button",
          "label": "LOGIN",
          "click": "this.event.send({name: 'login'})",
          "style": {
            "color": "#FFF",
            "backgroundColor": "#039be5",
            "width": "200px",
            "margin": "12px 0 48px 0"
          }
        }
      ]
    },

    "user": {
      "class": {
        "mat-elevation-z2": true
      },
      "style": {
        "color": "white",
        "margin": 0,
        "padding": 0,
        "background": "crimson"
      },
      "header": {
        "screen": [
          {
            "type": "button",
            "buttonType": "mat-icon-button",
            "icon": "account_circle",
            "style": {
              "position": "absolute",
              "left": 0
            }
          },
          {
            "type": "typography",
            "default": "`${this.user.name()}`",
            "style": {
              "marginLeft": "24px"
            }
          }
        ]
      },
      "menu": {
        "screen": [
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Profile",
            "click": "this.nav.navigateByUrl(`/profile`)"
          },
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Logout",
            "click": "this.event.send('logout')"
          }
        ]
      }
    }
  }
]
