{
  "_id": "000000000000000000000000",
  "toolbar": {
    "layoutStyle": {
      "position": "sticky",
      "top": 0,
      "zIndex": 1000
    },
    "style": {
      "position": "relative"
    },
    "class": {
      "mat-elevation-z1": false
    },
    "actions": [
      {
        "type": "button",
        "buttonType": "mat-icon-button",
        "label": "Refresh",
        "click": "this.event.send({'name': 'refresh'})",
        "icon": "refresh"
      }
    ]
  },
  "content": {
    "layoutStyle": {
      "overflow": "hidden",
      "display": "flex",
      "flex-direction": "column",
      "flex-grow": 1,
      "height": "100%"
    },
    "style": {
      "width": "100%",
      "minWidth": "100%",
      "padding": "0",
      "display": "flex",
      "flexDirection": "column",
      "flex-grow": 1,
      "height": "100%",
      "overflow-y": "auto"
    }
  },
  "navigation": {
    "style": {
      "width": "256px"
    },
    "header": {
      "screens": [
        {
          "type": "typography",
          "text": "Admin Panel",
          "style": {
            "fontSize": "20px",
            "padding": "24px 8px 12px",
            "fontFamily": "auto",
            "fontWeight": "bold",
            "textTransform": "uppercase",
            "color": "gray"
          }
        }
      ]
    }
  },
  "user": {
    "screens": [
      {
        "type": "divider",
        "layoutStyle": {
          "width": "100%"
        }
      },
      {
        "type": "popup-menu",
        "key": "user",
        "xPosition": "before",
        "layoutStyle": {
          "padding": "8px",
          "display": "flex",
          "flex-direction": "row"
        },
        "menus": [
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Profile",
            "click": "this.nav.navigateByUrl(`/profile`); this.event.send({name: 'drawer-close'})"
          },
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Logout",
            "click": "this.event.send('logout')"
          }
        ],
        "screens": [
          {
            "type": "layout",
            "layoutStyle": {
              "flexGrow": 1
            },
            "screens": [
              {
                "type": "typography",
                "default": "`${this.user.name()}`",
                "style": {
                  "fontSize": "15px",
                  "fontWeight": "bold"
                }
              },
              {
                "type": "typography",
                "default": "`${this.user.id()}`",
                "style": {
                  "color": "gray",
                  "fontSize": "small"
                }
              }
            ]
          },
          {
            "type": "button",
            "buttonType": "mat-icon-button",
            "icon": "arrow_drop_down",
            "click": "this.event.send({name: 'popup-trigger', key: 'user'})"
          }
        ]
      },
      {
        "type": "divider",
        "layoutStyle": {
          "width": "100%"
        }
      }
    ]
  }
}