{
  "_id": "000000000000000000000000",
  "type": "layout",
  "layoutStyle": {
    "width": "100%",
    "height": "100%",
    "background-size": "cover",
    "background-color": "#2d323e",
    "display": "flex",
    "align-items": "center",
    "justify-content": "center"
  },
  "class": {
    "mat-elevation-z16": true
  },
  "style": {
    "width": "300px",
    "min-width": "300px",
    "background": "#ffffff",
    "text-align": "center",
    "border-radius": "8px"
  },
  "errors": {
    "403": "Login Failed. Please, check your Login ID and Password",
    "401": "Access not authorized"
  },
  "screens": [
    {
      "type": "typography",
      "format": "this.config.name",
      "style": {
        "fontSize": "24px",
        "textAlign": "center",
        "padding": "48px 0 24px",
        "color": "#2d385e",
        "font-family": "'Titillium Web', sans-serif",
        "font-weight": "700"
      }
    },
    {
      "type": "typography",
      "key": "error",
      "style": {
        "color": "crimson",
        "textAlign": "center",
        "padding": "12px"
      }
    },
    {
      "type": "input",
      "inputType": "email",
      "appearance": "fill",
      "floatLabel": "auto",
      "key": "id",
      "label": "Login ID",
      "keyupEnter": "this.event.send({name: 'login'})",
      "errorCondition": "!value",
      "errorMessage": "You must enter the login ID",
      "style": {
        "width": "250px"
      }
    },
    {
      "type": "input",
      "inputType": "password",
      "appearance": "fill",
      "floatLabel": "auto",
      "key": "password",
      "label": "Password",
      "keyupEnter": "this.event.send({name: 'login'})",
      "style": {
        "margin-top": "12px",
        "width": "250px"
      }
    },
    {
      "type": "button",
      "label": "LOGIN",
      "click": "this.event.send({name: 'login'})",
      "style": {
        "color": "#FFF",
        "backgroundColor": "#039be5",
        "width": "250px",
        "margin": "12px 0 48px 0"
      }
    }
  ]
}
