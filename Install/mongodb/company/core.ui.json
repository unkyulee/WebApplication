{
  "_id": "000000000000000000000000",
  "type": "layout",
  "layoutStyle": {
    "width": "100%",
    "height": "100%",
    "background-size": "cover",
    "background-color": "#2d323e",
    "display": "flex",
    "align-items": "center",
    "justify-content": "center"
  },
  "class": {
    "mat-elevation-z16": true
  },
  "style": {
    "width": "300px",
    "min-width": "300px",
    "background": "#ffffff",
    "text-align": "center",
    "border-radius": "8px",
    "display": "flex",
    "flexFlow": "row wrap",
    "justifyContent": "center",
    "alignItems": "center"
  },
  "errors": {
    "401": "Access not authorized",
    "403": "Login Failed. Please, check your Login ID and Password"
  },
  "screens": [
    {
      "type": "typography",
      "format": "this.config.get('name')",
      "style": {
        "fontSize": "24px",
        "textAlign": "center",
        "padding": "48px 0 24px",
        "color": "#2d385e",
        "font-family": "'Titillium Web', sans-serif",
        "font-weight": "700"
      }
    },
    {
      "type": "typography",
      "key": "error",
      "style": {
        "color": "crimson",
        "textAlign": "center",
        "padding": "12px"
      }
    },
    {
      "type": "input",
      "inputType": "email",
      "appearance": "fill",
      "floatLabel": "auto",
      "key": "id",
      "label": "Login ID",
      "keyupEnter": "this.event.send({name: 'login'})",
      "errorCondition": "!value",
      "errorMessage": "You must enter the login ID",
      "style": {
        "width": "250px"
      }
    },
    {
      "type": "input",
      "inputType": "password",
      "appearance": "fill",
      "floatLabel": "auto",
      "key": "password",
      "label": "Password",
      "keyupEnter": "this.event.send({name: 'login'})",
      "style": {
        "margin-top": "12px",
        "width": "250px"
      }
    },
    {
      "type": "button",
      "label": "LOGIN",
      "click": "this.event.send({name: 'login'})",
      "style": {
        "color": "#FFF",
        "backgroundColor": "#039be5",
        "width": "250px",
        "margin": "12px 0 48px 0"
      }
    }
  ],
  "toolbar": {
    "layoutStyle": {
      "position": "sticky",
      "top": 0,
      "zIndex": 1000
    },
    "class": {
      "mat-elevation-z1": false
    },
    "actions": [
      {
        "type": "button",
        "buttonType": "mat-icon-button",
        "label": "Refresh",
        "click": "this.event.send({'name': 'refresh'})",
        "icon": "refresh"
      }
    ]
  },
  "content": {
    "layoutStyle": {
      "overflow": "hidden",
      "display": "flex",
      "flex-direction": "column",
      "flex-grow": 1,
      "height": "100%"
    },
    "style": {
      "width": "100%",
      "minWidth": "100%",
      "padding": "0",
      "display": "flex",
      "flexDirection": "column",
      "flex-grow": 1,
      "height": "100%",
      "overflow-y": "auto"
    }
  },
  "navigation": {
    "style": {
      "width": "256px"
    },
    "header": {
      "screens": [
        {
          "type": "typography",
          "format": "this.config.get('name')",
          "style": {
            "fontSize": "20px",
            "padding": "24px 8px 12px",
            "fontFamily": "auto",
            "fontWeight": "bold",
            "textTransform": "uppercase",
            "color": "gray"
          }
        }
      ]
    }
  },
  "user": {
    "screens": [
      {
        "type": "divider",
        "layoutStyle": {
          "width": "100%"
        }
      },
      {
        "type": "popup-menu",
        "key": "user",
        "xPosition": "before",
        "layoutStyle": {
          "padding": "8px",
          "display": "flex",
          "flex-direction": "row"
        },
        "menus": [
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Profile",
            "click": "this.nav.navigateByUrl(`/profile`); this.event.send({name: 'drawer-close'})"
          },
          {
            "type": "button",
            "buttonType": "mat-menu-item",
            "label": "Logout",
            "click": "this.event.send('logout')"
          }
        ],
        "screens": [
          {
            "type": "layout",
            "layoutStyle": {
              "flexGrow": 1
            },
            "screens": [
              {
                "type": "typography",
                "default": "`${this.user.name()}`",
                "style": {
                  "fontSize": "15px",
                  "fontWeight": "bold"
                }
              },
              {
                "type": "typography",
                "default": "`${this.user.id()}`",
                "style": {
                  "color": "gray",
                  "fontSize": "small"
                }
              }
            ]
          },
          {
            "type": "button",
            "buttonType": "mat-icon-button",
            "icon": "arrow_drop_down",
            "click": "this.event.send({name: 'popup-trigger', key: 'user'})"
          }
        ]
      },
      {
        "type": "divider",
        "layoutStyle": {
          "width": "100%"
        }
      }
    ]
  }
}