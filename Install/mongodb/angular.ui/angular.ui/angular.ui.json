[
  {
    "_id": ObjectId("000000000000000000000015"),
    "name": "UI Element List",
    "type": "layout",
    "layoutStyle": {
      "background": "#2C313D",
      "color": "white",
      "display": "flex",
      "flex-flow": "row wrap"
    },
    "screen": [      
      {
        "type": "input",
        "key": "search",
        "label": "Search ...",
        "floatLabel": "never",
        "icon": "search",
        "iconColor": "white",
        "style": {
          "margin": "-12px 0 -12px 8px"          
        },
        "class": {
          "white": true
        },
        "changed": "this.event.send({ name: 'refresh', key: 'table' })"
      },
      {
        "type": "div",        
        "layoutStyle": { "flex-grow": 1, "width": "1px" }
      },
      {
        "type": "button",
        "buttonType": "mat-icon-button",
        "icon": "add_circle",
        "click": "this.router.navigateByUrl(`/angular.ui/detail`)"
      }
    ]
  },
  {
    "_id": ObjectId("000000000000000000000016"),
    "type": "data-table",
    "tableType": "card",
    "key": "table",
    "name": "UI Elements Data Table",
    "src": "`/adminapi/angular.ui?_search=${this.data.search?this.data.search:''}`",
    "method": "get",
    "transform": "response.data",    
    "layoutStyle": {
      "flex-grow": 1,
      "display": "flex",
      "flex-direction": "column",
      "height": "100%",
      "overflow-y": "auto"
    },    
    "click": "this.router.navigateByUrl(`/angular.ui/detail?_id=${item._id}`)",
    "columns": [
      {
        "type": "typography",
        "key": "name",
        "label": "name"
      },
      {
        "type": "typography",
        "key": "type",
        "label": "type"
      },
      {
        "type": "typography",
        "key": "_id",
        "label": "_id"
      }      
    ]
  },
  {
    "_id": ObjectId("000000000000000000001016"),
    "name": "UI Element Detail Toolbar",
    "type": "layout",
    "layoutStyle": {
      "background": "#3B4251",
      "width": "100%",
      "display": "flex",
      "flex-wrap": "wrap",
      "color": "white"
    },
    "screen": [
      {
        "type": "div",
        "comment": "spacer",
        "layoutStyle": {
          "flex-grow": 1,
          "width": "1px"
        }
      },
      {
        "type": "typography",
        "condition": "!this.data._id",
        "default": "this.data._params_._id?'Loading ...':'Must Save'",
        "layoutStyle": {
          "text-align": "center"
        },
        "style": {
          "padding": "10px",
          "text-transform": "uppercase",
          "font-weight": "bold",
          "color": "chartreuse"
        }
      },
      {
        "type": "button",
        "buttonType": "mat-icon-button",
        "icon": "save",
        "click": "this.event.send({ 'name': 'save' });"
      }
    ]
  },
  {
    "_id": ObjectId("000000000000000000001017"),
    "type": "form-generator",
    "src": "this.data._params_._id ? `/adminapi/angular.ui?_id=${this.data._params_._id}` : ''",
    "method": "get",
    "transform": "response.data[0]",
    "layoutStyle": {
      "flex-grow": 1,
      "display": "flex",
      "flex-direction": "column",
      "height": "100%",
      "overflow-y": "auto"
    },
    "save": {
      "src": "`/adminapi/angular.ui`",
      "method": "post",
      "saveAction": "if(!this.data._id) { this.data._id = response._id; this.nav.setParam('_id', response._id, true); } this.snackBar.open('Salvato', null, { duration: 2000 });"
    },
    "screen": [
      {        
        "header": {
          "display": false
        },
        "screen": [
          {
            "type": "code-editor",
            "editorType": "json",
            "path": ".",
            "label": "UI Element",
            "editorOptions": {
              "theme": "vs-dark",
              "automaticLayout": true
            },
            "layoutStyle": {
              "width": "100%"
            },
            "style": {
              "width": "100%",
              "height": "600px"
            }
          }
        ]
      }
    ]
  }
]