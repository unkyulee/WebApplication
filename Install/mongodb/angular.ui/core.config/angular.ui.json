{
  "_id": "000000000000000000000030",
  "name": "Core Config",
  "type": "layout",
  "contentStyle": {
    "display": "flex",
    "flexDirection": "column",
    "flexGrow": 1
  },
  "layoutStyle": {
    "width": "100%",
    "display": "flex",
    "flex-direction": "column",
    "color": "white",
    "height": "100%"
  },
  "screen": [
    {
      "type": "layout",
      "layoutStyle": {
        "background": "#2C313D",
        "color": "white",
        "display": "flex",
        "flex-flow": "row wrap",
        "min-height": "40px"
      },
      "init": "obj.ensureExists(this.data, 'filters', {});",
      "screen": [
        {
          "type": "button",
          "buttonType": "mat-icon-button",
          "icon": "filter_list",
          "click": "this.event.send({name: 'toggle-sidenav', key: 'filters'})"
        },
        {
          "type": "div",
          "comment": "spacer",
          "layoutStyle": {
            "flex-grow": 1,
            "width": "1px"
          }
        },
        {
          "type": "button",
          "buttonType": "mat-icon-button",
          "icon": "add_circle",
          "click": "this.router.navigateByUrl(`/core.config/detail`)"
        }
      ]
    },
    {
      "type": "side-nav",
      "key": "filters",
      "opened": "this.nav.isHandset == false ? true : false",
      "mode": "this.nav.isHandset == false ? 'side' : 'over'",
      "layoutStyle": {
        "flex-grow": 1,
        "height": "100%",
        "width": "100%",
        "display": "flex",
        "flex-direction": "column"
      },
      "containerStyle": {
        "display": "flex",
        "flex-direction": "column",
        "height": "100%"
      },
      "sideStyle": {
        "background": "ghostwhite",
        "display": "flex",
        "flexFlow": "row wrap",
        "color": "black",
        "padding": "4px",
        "max-width": "300px",
        "height": "100%"
      },
      "sideScreen": [
        {
          "type": "input",
          "key": "filters._id",
          "default": "``",
          "label": "_id",
          "floatLabel": "auto",
          "layoutStyle": {
            "width": "100%"
          },
          "style": {
            "width": "100%"
          },
          "changed": "this.event.send({name: 'refresh', key: 'core.config'});"
        },
        {
          "type": "input",
          "key": "filters._search",
          "default": "``",
          "label": "Cerca ...",
          "floatLabel": "auto",
          "layoutStyle": {
            "width": "100%"
          },
          "style": {
            "width": "100%"
          },
          "changed": "this.event.send({name:'refresh', key: 'core.config'});"
        },
        {
          "type": "selection",
          "selectionType": "autocomplete",
          "label": "Site",
          "floatLabel": "auto",
          "src": "`/adminapi/core.navigation?name=${obj.get(this, '_value', '')}`",
          "transform": "response.data",
          "optionLabelTransform": "`${option.name} - ${option.module} - ${option.url}`",
          "inputValueTransform": "obj.has(this, '_value._id') ? `${this._value.name}` : this._value",
          "layoutStyle": {
            "width": "100%"
          },
          "style": {
            "width": "100%"
          },
          "selected": "this.data.filters.navigation_id = this._value._id; this.event.send({name:'refresh', key: 'core.config'});"
        }
      ],
      "screen": [
        {
          "type": "data-table",
          "tableType": "card",
          "key": "core.config",
          "src": "`/adminapi/core.config?_projection=navigation_id,type`",
          "method": "get",
          "transform": "response.data",
          "preProcess": "data = {...data, ...this.data.filters};",
          "layoutStyle": {
            "flex-grow": 1,
            "display": "flex",
            "flex-direction": "column",
            "height": "100%",
            "overflow-y": "auto"
          },
          "itemBoxStyle": {
            "cursor": "pointer",
            "margin": "8px",
            "padding": "4px",
            "font-size": "small",
            "display": "flex",
            "flex-flow": "row wrap"
          },
          "click": "this.router.navigateByUrl(`/core.config/detail?_id=${item._id}`)",
          "columns": [
            {
              "type": "typography",
              "key": "name",
              "layoutStyle": {
                "width": "100%"
              },
              "style": {
                "fontWeight": "bold",
                "width": "100%"
              }
            },
            {
              "type": "typography",
              "key": "type",
              "format": "`type: ${this._value}`",
              "layoutStyle": {
                "width": "100%"
              },
              "style": {
                "width": "100%"
              }
            },
            {
              "type": "typography",
              "key": "_id",
              "layoutStyle": {
                "width": "100%"
              },
              "style": {
                "width": "100%"
              }
            },
            {
              "type": "typography",
              "key": "navigation_id",
              "format": "`navigation_id: ${this._value}`",
              "layoutStyle": {
                "width": "100%"
              },
              "style": {
                "width": "100%"
              }
            }
          ]
        }
      ]
    }
  ]
}